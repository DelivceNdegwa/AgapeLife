<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgapeLife" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/agape_primary</item>
        <item name="colorPrimaryVariant">@color/agape_primary</item>
        <item name="colorOnPrimary">@color/agape_layout_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/agape_primary</item>
        <item name="colorSecondaryVariant">@color/agape_primary</item>
        <item name="colorOnSecondary">@color/agape_layout_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.AgapeLife.NoActionBar" parent="Theme.AgapeLife">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>